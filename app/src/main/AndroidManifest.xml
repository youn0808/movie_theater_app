<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.sceneit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/sceneit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SceneIt">
        <activity android:name=".presentation.SignUpActivity"></activity>
        <activity android:name=".presentation.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.PayPalPayment" />
        <activity android:name=".presentation.addCreditCard" />
        <activity android:name=".presentation.PayPalConfirm" />
        <activity android:name=".presentation.CreditActivity" />
        <activity android:name=".presentation.MainActivity">
        </activity>
        <activity android:name=".presentation.SearchActivity">
        </activity>
        <activity android:name=".presentation.OrderActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
